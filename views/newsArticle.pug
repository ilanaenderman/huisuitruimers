  body
    #fh5co-page
      header#fh5co-header(role='banner')
        .container
          .header-inner
            h1
              a(href='/')
                img#logo(src='images/logo.png') 
            nav(role='navigation')
              ul
                li
                  a(href='/') Home
                li
                  a(href='/services') Onze diensten
                li
                  a(href='/about') Wie zijn wij?
                li
                  a.active(href='/news') Nieuws
                li
                  a(href='/contact') Contact
                - if(admin === undefined)
                  li 
                - else
                  li
                    a(href='/admin') Admin
                  li
                    a(href='/logout') Log uit
      
      #fh5co-about-section
        .container
          .row
            .col-md-8.col-md-offset-2
              .row
              each thing in news
                div.about-inner
                  img.img-reponsiveArt(src= thing.image alt='About')
                  h3.news #{thing.title}
                  h5 #{thing.date}
                  hr
                  p #{thing.body}

      
      footer#fh5co-footer(role='contentinfo')
        .col-md-5.col-md-push-2.col-sm-4.col-xs-12.col-xs-push-0
          h3 Contact
          ul.float
            li
              a(href="mailto:info@dehuisuitruimers.nl") info@dehuisuitruimers.nl
            li
              a(href="tel:+31626340259") Ruud Klok 06 - 26 34 02 59
            li
              a(href="tel:+31627169502") Erwin Prins 06 - 27 16 95 02

        .col-md-3.col-sm-5.col-xs-12.col-xs-push-0
          h3 In samenwerking met
          ul.float
            li
              a(href='http://rataplan.nl/') RataPlan
            li
              a(href='https://www.reshare.nl/') ReShare
            li
              a(href='http://www.its-your-finance.nl/') It's Your Finance
          
        .col-md-2.col-sm-3.col-xs-12.col-xs-push-0
          h3 Volg ons op
          ul.fh5co-social
            li
              a(href='https://twitter.com/huisuitruimers')
                i.icon-twitter
                |  Twitter
            li
              a(href='https://www.facebook.com/DeHuisuitruimers/?fref=ts')
                i.icon-facebook
                |  Facebook
            li
              a(href='https://www.instagram.com/dehuisuitruimers/')
                i.icon-instagram
                |  Instagram

