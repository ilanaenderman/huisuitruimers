  body
    #fh5co-page
      header#fh5co-header(role='banner')
        .container
          .header-inner
            h1
              a(href='/')
                img#logo(src='images/logo.png') 
            nav(role='navigation')
              ul
                li
                  a(href='/') Home
                li
                  a(href='/services') Onze diensten
                li
                  a(href='/about') Wie zijn wij?
                li
                  a(href='/news') Nieuws
                li
                  a(href='/contact') Contact
                li
                  a.active(href='/admin') Admin
                li
                  a(href='/logout') Log uit
      
      
      div#fh5co-intro-section
        div.container
          div.row
            div.col-md-8.col-md-offset-2.text-center
              h2 Maak nieuwsitem
          div.row
            form(action='/createArticle' method='post' enctype='multipart/form-data' autocomplete='off')
              div.col-md-6
                div.row
                  div.col-md-12
                    div.form-group
                      input.form-control(name='title' placeholder='Titel' type='text'
                      required) 
                  div.col-md-12
                    div.form-group
                      input.form-control(name='date' placeholder='Datum' type='string' required)
                  div.col-md-12
                    div.form-group
                      input.form-control(name='image' placeholder='Foto' type='file'
                      required)
              div.col-md-6
                div.row
                  div.col-md-12
                    div.form-group
                      textarea.form-control(name='body' placeholder='Bericht' cols='30' rows='7' required)
              div.col-md-12
                div.form-group
                  input#button3.btn.btn-primary(value='Maak aan' type='submit')

      #fh5co-blog-section
        .container
          .row
            .col-md-6.col-md-offset-3.text-center.fh5co-heading
              h2 Overzicht nieuwsberichten
          .row
          - news.sort(function(a,b){
            - return b.id - a.id
          - })
          each thing in news
            .col-md-4.col-lg-3.col-sm-6.text-center
              .blog-inner
                a(href='#')
                  img.img-responsiveNews(src= thing.image alt='Blog')
                .descNews
                  h3.news
                    b #{thing.title}
                  h5 #{thing.date}

                .desc
                  form(method='post' action='/goToArticle')
                    button.btn.btn-primary.btn-outline(type='submit' href='/goToArticle' value= thing.id name='ID') Update

      footer#fh5co-footer(role='contentinfo')
        .col-md-4.col-md-push-2.col-sm-4.col-xs-12.col-xs-push-0
          h3 Contact
          ul.float
            li
              a(href="mailto:info@dehuisuitruimers.nl") info@dehuisuitruimers.nl
            li
              a(href="tel:+31626340259") Ruud Klok 06 - 26 34 02 59
            li
              a(href="tel:+31627169502") Erwin Prins 06 - 27 16 95 02

        .col-md-3.col-sm-5.col-xs-12.col-xs-push-0
          h3 In samenwerking met
          ul.float
            li
              a(href='http://rataplan.nl/') RataPlan
            li
              a(href='https://www.reshare.nl/') ReShare
            li
              a(href='http://www.its-your-finance.nl/') It's Your Finance
          
        .col-md-2.col-sm-3.col-xs-12.col-xs-push-0
